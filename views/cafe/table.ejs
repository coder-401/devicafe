<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Zoom</title>
        <script>
            const ROOM_ID = "<%= tableId %>"
        </script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
            integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
        <link rel="stylesheet" href="./../../zoom.css">
        <link rel="stylesheet" href="./../../whiteBoard.css">

    </head>

    <body>


        <form action="/signOut" method="POST">
            <input type="submit" value="sign out" class="btn-out">
        </form>
        <div class="main">
            <div class="main__left">
                <div class="main__videos">
                    <div id="video-grid">

                    </div>
                </div>
                <a href="/profile/<%=userId %>">
                    <h3>Profile</h3>
                </a>
                <div class="main__controls">
                    <div class="main__controls__block">
                        <div onclick="muteUnmute()" class="main__controls__button main__mute_button toggle2">
                            <i class="unmute fas fa-microphone-slash"></i>
                            <span>Unmute</span>
                        </div>
                        <div onclick="playStop()" class="main__controls__button main__video_button toggle">
                            <i class="stop fas fa-video-slash"></i>
                            <span>Play Video</span>
                        </div>
                    </div>
                </div>
            </div>


            <h3 id="tableId">
                Table Id: <%= tableId %>
            </h3>

            <ul class="users">

            </ul>
            <section class="questionCont">
                <% if (role==='interviewer' ) {%>
                    <button class="showQuesBtn">show Question</button>
                    <% questions.forEach(question=> {%>
                        <div style="border: 1px solid black; margin: 1rem;" class="question">
                            <%= question.question %> <br>
                                <%= question.answer %><br>
                                    <%= question.difficulty %><br>
                                        <%= question.category %><br>
                        </div>

                        <% }) %>

                            <%} %>
            </section>
            <div class="main__right">
                <div class="main__header">
                    <h6># Chat</h6>
                </div>
                <div class="main__chat_window">
                    <ul class="messages">

                    </ul>

                </div>
                <div class="main__message_container">
                    <input id="chat_message" type="text" placeholder="Type message here...">
                </div>
            </div>
        </div>
        <section class="ccContainer">
            <% if (role==='interviewer' ) {%>
                <form id="CCForm" action="">
                    <label for="">Code Challenge difficulty</label>
                    <select name="difficulty" id="">
                        <option value="Easy">Easy</option>
                        <option value="Meduim">Meduim</option>
                        <option value="Hard">Hard</option>
                    </select><br>
                    <button type="submit">View</button>
                </form>
                <div class="CC">

                </div>
                <button id="btnbtn">Hide Text Editor</button>
                <iframe id="iframe"></iframe>
                <%} %>
        </section>


        <canvas id="canvas" class="hide"></canvas>
        <div class="tools">
            <div id="eraser" class="eraser hide">eraser</div>
            <div id="pen" class="pen hide">pen</div>
        </div>

        <button class="btn-hide-show">Hide/show White Board</button>


        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <script>
            let username = "<%=username %>"

            $('.showQuesBtn').on('click', () => {
                $('.questionCont').toggle();
            })

            $('#btnbtn').on('click', () => {
                $('#iframe').toggle();
            })

        </script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="./../../whiteBoard.js"></script>
        <script src="./../../zoom.js"></script>
    </body>

</html>
